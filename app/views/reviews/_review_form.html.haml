= form_for review, url: reviews_path, method: :post, html: { class: "max-600 mb-80" }, remote: true do |f|
  = hidden_field(:review, :book_id, value: review.book.id)
  .form-group{class: add_error_class(review, :score)}
    = f.label :score, t(:rating), class: "control-label input-label"
    = f.number_field :score, class: "form-control", min: "1", max: "5"
    .span.help-block= show_errors(review, :score)
  .form-group{class: add_error_class(review, :title)}
    = f.label :title, t(:title), class: "control-label input-label"
    = f.text_field :title, class: "form-control", placeholder: t(:title)
    .span.help-block= show_errors(review, :title)
  .form-group{class: add_error_class(review, :message)}
    = f.label :message, t(:review), class: "control-label input-label"
    = f.text_area :message, class: "form-control", placeholder: t(:review)
    .span.help-block= show_errors(review, :message)
  = f.submit t(:post), class: "btn btn-default center-block mb-20"
